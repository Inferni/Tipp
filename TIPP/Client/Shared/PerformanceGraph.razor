<div class="container">
    <div class="row">
        <div class="col">
            @*<Button Clicked="@(async () => await HandleRedraw())">Redraw</Button>*@

            <LineChart @ref="lineChart" TItem="double" OptionsObject="new { animation = new { duration = 0 }, hover = new { animationDuration = 0 }, responsiveAnimationDuration = 0 }" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button class="btn btn-primary float-right" @onclick="ShowModal"><Icon Name="IconName.Play" /></button>
        </div>

    </div>
</div>


@if (loading == false)
{


    @*<Button Clicked="@ShowModal">Show Modal</Button>*@

    <Modal @ref="modalRef">
        <ModalContent Centered="true">
            <ModalHeader>
                <ModalTitle>Kies een activiteit</ModalTitle>
                <CloseButton />
            </ModalHeader>
            <ModalBody>
                @if (activities != null)
                {
                    @foreach (var activity in activities)
                    {
                        <Field>
                            <Button Color="Color.Primary" Clicked="() => SetActivity(activity)" @onclick="ShowFillableModal">@activity.Name</Button>
                        </Field>
                    }
                }



            </ModalBody>
            <ModalFooter>
                @*<Button class="close" Color="Color.Secondary" Clicked="@HideModal" aria-label="Close"></Button>*@
            </ModalFooter>
        </ModalContent>
    </Modal>

    <Modal @ref="modalFill">
        <ModalContent Centered="true">
            <ModalHeader>
                <ModalTitle>Vul gewerkte tijd in</ModalTitle>
                <CloseButton />
            </ModalHeader>
            <ModalBody>
               @*FILLABLE FORM DING HIER*@
                <Field>
                    <TextEdit Placeholder="Gewerkte tijd in uren" type="number" TextChanged="@OnNameChanged"/>
                    <Button Color="Color.Primary">Ok</Button>
                </Field>
                @*MORGEN REST CALL MAKEN HIUER*@

            </ModalBody>
            <ModalFooter>
                @*<Button class="close" Color="Color.Secondary" Clicked="@HideModal" aria-label="Close"></Button>*@
            </ModalFooter>
        </ModalContent>
    </Modal>

}
else
{
    <div class="text-center p-3">
        <span class="spinner-border spinner-border-lg align-center"></span>
    </div>
}

