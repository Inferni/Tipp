@page "/"
@attribute [Authorize]
@inject Service.IUserDataService UserService


<div class="p-4">
    <div class="container">
        <h1>Hi @UserService.User.Username!</h1>
        <p>You're logged in with Blazor WebAssembly!!</p>
        @*<p><NavLink href="users">Manage Users</NavLink></p>*@

        @switch (UserService.User.Role)
        {
            case TIPP.Shared.Role.User:
                <p><NavLink href="/user/{UserService.User.Id}">Your projects</NavLink></p>
                break;
            case TIPP.Shared.Role.Admin:
                <p><NavLink href="/admin/{UserService.User.Id}">Manage Your Projects</NavLink></p>
                break;
            default:
                break;
        }
    </div>
</div>

@code
{
    protected override async void OnInitialized()
    {
        Console.WriteLine(UserService.User.Role);
    }
}
